        function clearResults() {
      if (confirm('Are you sure you want to delete these results?')) {
          document.getElementById('results').style.display = 'none';
        document.getElementById('inputUrl').value = '';
        document.getElementById('pageInfo').innerHTML = '';
        // Clear charts if needed
      }
    }

        function renderIssueList(issues) {
      const issueList = document.getElementById('issueList');
        issueList.innerHTML = '';

      issues.forEach((issue, index) => {
        const typeClass = issue.type === 'error' ? 'error' : 'warning';
        const impactClass = `impact-${issue.impact}`;
        const occurrenceText = issue.count === 1 ? '1 location' : `${issue.count} locations`;

        const plainText = getPlainLanguageExplanation(issue.code, issue.message);

        let occurrencesHTML = '';
        issue.occurrences.forEach((occ, occIndex) => {
          const elementDescription = describeElement(occ.selector, occ.context);
        occurrencesHTML += `
        <div class="occurrence">
          <div class="occurrence-header" style="display:flex; justify-content:space-between; align-items:center;">
            <span>üìç Location ${occIndex + 1}</span>
            <button onclick="generateFix('${escapeHtml(occ.selector)}', '${issue.code}')" style="background:#059669; color:white; border:none; padding:4px 8px; border-radius:4px; font-size:10px; cursor:pointer; font-weight:700;">‚ú® Generate Fix (Beta)</button>
          </div>
          <div class="plain-language">
            <strong>üéØ Summary:</strong>
            <div class="what">${elementDescription}</div>
            <button class="technical-toggle" onclick="toggleTechnical(${index}, ${occIndex})">Show Technical Details</button>
          </div>
          <div class="technical-details" id="tech-${index}-${occIndex}">
            <div class="selector-box"><strong>CSS Selector:</strong><br>${escapeHtml(occ.selector)}</div>
            <div class="context-box"><strong>HTML Code:</strong><br>${escapeHtml(occ.context)}</div>
          </div>
        </div>
        `;
        });

        issueList.innerHTML += `
        <div class="issue-item ${typeClass}" data-type="${issue.type}" data-impact="${issue.impact}">
          <div class="issue-header">
            <span class="issue-badge ${typeClass}">${issue.type}</span>
            <span class="impact-badge ${impactClass}">${issue.impact}</span>
            <span class="issue-count">${occurrenceText}</span>
          </div>
          <div class="plain-language" style="margin-top: 12px;">
            <strong>Summary:</strong>
            <div class="what">${plainText.what}</div>
            <div class="why">Why it matters: ${plainText.why}</div>
          </div>
          <div class="issue-code" style="margin-top: 12px;">Technical Code: ${issue.code}</div>
          <div class="issue-message" style="font-size: 13px; color: #718096;">${issue.message}</div>
          <button class="toggle-details" onclick="toggleDetails(${index})">
            ‚ñº Show All Locations
          </button>
          <div class="issue-details" id="details-${index}">
            ${occurrencesHTML}
          </div>
        </div>
        `;
      });
    }

        function toggleDetails(index) {
      const details = document.getElementById(`details-${index}`);
        const button = event.target;

        if (details.classList.contains('expanded')) {
          details.classList.remove('expanded');
        button.textContent = '‚ñº Show All Locations';
      } else {
          details.classList.add('expanded');
        button.textContent = '‚ñ≤ Hide Locations';
      }
    }

        function applyFilters() {
          currentFilters.type = document.getElementById('filterType').value;
        currentFilters.sort = document.getElementById('sortBy').value;

        let filtered = [...allIssuesData];

        // Filter by type
        if (currentFilters.type !== 'all') {
          filtered = filtered.filter(issue => issue.type === currentFilters.type);
      }

        // Sort
        if (currentFilters.sort === 'count') {
          filtered.sort((a, b) => b.count - a.count);
      } else if (currentFilters.sort === 'impact') {
        const impactOrder = {critical: 0, serious: 1, moderate: 2, minor: 3, unknown: 4 };
        filtered.sort((a, b) => impactOrder[a.impact] - impactOrder[b.impact]);
      } else if (currentFilters.sort === 'alpha') {
          filtered.sort((a, b) => a.code.localeCompare(b.code));
      }

        renderIssueList(filtered);
    }

        function escapeHtml(text) {
      const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

        function toggleTechnical(issueIndex, occIndex) {
      const elem = document.getElementById(`tech-${issueIndex}-${occIndex}`);
        const btn = event.target;
        if (elem.classList.contains('visible')) {
          elem.classList.remove('visible');
        btn.textContent = 'Show Technical Details';
      } else {
          elem.classList.add('visible');
        btn.textContent = 'Hide Technical Details';
      }
    }

        function describeElement(selector, context) {
          // Convert technical selector to plain English
          let description = '';

        if (selector.includes('button')) {
          description = 'A button';
      } else if (selector.includes('a[') || selector.includes('a:')) {
          description = 'A link';
      } else if (selector.includes('img')) {
          description = 'An image';
      } else if (selector.includes('input')) {
          description = 'A form field';
      } else if (selector.includes('nav')) {
          description = 'A navigation menu item';
      } else if (selector.includes('header')) {
          description = 'An element in the page header';
      } else if (selector.includes('footer')) {
          description = 'An element in the page footer';
      } else {
          description = 'An element';
      }

        // Try to extract text content or class name
        const classMatch = context.match(/class="([^"]+)"/);
      const textMatch = context.match(/>([^<]{1, 50})</)

    if (textMatch && textMatch[1].trim()) {
      description += ` that says "${textMatch[1].trim()}"`;
    } else if (classMatch) {
      const className = classMatch[1].split(' ')[0];
      description += ` with style "${className}"`;
    }

    return description;
    }

    function generateFix(selector, code) {
      let css = '';
      if (code.includes('color-contrast')) {
        css = `/* Fix Contrast Issue for ${selector.split(' > ').pop()} */\n${selector} {\n    color: #000000 !important; /* Forces Pass (Ratio 21:1) */\n    background-color: #ffffff !important;\n}`;
      } else if (code.includes('image-alt')) {
        css = `/* Fix Missing Alt Text */\n${selector} {\n    /* Note: CSS cannot add alt text. Please add alt="Description" to the HTML tag. */\n    border: 2px dashed #f56565; /* Highlight for developer */\n}`;
      } else if (code.includes('label')) {
        css = `/* Fix Missing Form Label */\n${selector} {\n    /* Note: Add aria-label="Description" to this input */\n    border: 2px solid #ed8936;\n}`;
      } else {
        css = `/* Generic Fix for ${code} */\n${selector} {\n    outline: 2px solid red !important; /* Highlight element */\n}`;
      }

      // Show modal or alert
      const modalHtml = `
            <div style="position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:9999; display:flex; justify-content:center; align-items:center">
                <div style="background:white; padding:20px; border-radius:12px; width:500px; max-width:90%; box-shadow:0 10px 25px rgba(0,0,0,0.2)">
                    <h3 style="margin-bottom:10px">‚ú® Auto-Generated Remediation</h3>
                    <p style="font-size:13px; color:#666; margin-bottom:15px">Copy this CSS into your site's stylesheet to potentially fix or highlight the issue.</p>
                    <textarea style="width:100%; height:100px; padding:10px; font-family:monospace; border:1px solid #ccc; border-radius:8px; margin-bottom:15px">${css}</textarea>
                    <div style="text-align:right">
                        <button onclick="this.parentElement.parentElement.parentElement.remove()" style="padding:8px 16px; border:none; background:#eee; border-radius:6px; cursor:pointer">Close</button>
                        <button onclick="navigator.clipboard.writeText(this.parentElement.previousElementSibling.value); this.innerText='Copied!'" style="padding:8px 16px; border:none; background:#059669; color:white; border-radius:6px; cursor:pointer; margin-left:8px; font-weight:600">Copy Code</button>
                    </div>
                </div>
            </div>
        `;
      document.body.insertAdjacentHTML('beforeend', modalHtml);
    }

    function getPlainLanguageExplanation(code, technicalMessage) {
      const explanations = {
        'color-contrast': {
          what: 'Text is too hard to read because there isn\'t enough contrast between the text color and the background color.',
          why: 'People with low vision or color blindness can\'t read the text easily.'
        },
        'link-in-text-block': {
          what: 'A link looks too similar to regular text - it\'s hard to tell it\'s clickable.',
          why: 'Users might not realize they can click it, or might click the wrong thing.'
        },
        'duplicate-id': {
          what: 'Two elements on the page have the same ID, which confuses screen readers.',
          why: 'Screen reader users might jump to the wrong location or miss important content.'
        },
        'image-alt': {
          what: 'An image is missing a description (alt text).',
          why: 'Blind users using screen readers can\'t tell what the image shows.'
        },
        'label': {
          what: 'A form field is missing a label that describes what it\'s for.',
          why: 'Users (especially screen reader users) won\'t know what to type in the field.'
        },
        'heading-order': {
          what: 'Headings are out of order (like jumping from Heading 1 to Heading 4).',
          why: 'Screen reader users use headings to navigate - wrong order makes the page confusing.'
        },
        'aria': {
          what: 'Accessibility code (ARIA) is used incorrectly.',
          why: 'Screen readers will announce the wrong information or get confused.'
        },
        'landmark': {
          what: 'The page is missing navigation landmarks (like "main content" or "navigation").',
          why: 'Screen reader users can\'t quickly jump to different sections of the page.'
        },
        'region': {
          what: 'A section of the page needs a label so screen readers know what it is.',
          why: 'Without labels, screen reader users can\'t understand the page structure.'
        }
      };

      // Find matching explanation
      for (const [key, value] of Object.entries(explanations)) {
        if (code.toLowerCase().includes(key) || technicalMessage.toLowerCase().includes(key)) {
          return value;
        }
      }

      // Default explanation
      return {
        what: technicalMessage,
        why: 'This makes the website harder to use for people with disabilities.'
      };
    }

    function exportToCSV() {
      if (!allIssuesData || allIssuesData.length === 0) {
        alert('No data to export');
        return;
      }

      let csv = 'Issue Code,Type,Impact,Message,Occurrences,CSS Selector,HTML Context,Fix URL\n';

      allIssuesData.forEach(issue => {
        issue.occurrences.forEach((occ, idx) => {
          const row = [
            `"${issue.code}"`,
            issue.type,
            issue.impact,
            `"${issue.message.replace(/"/g, '""')}"`,
            idx === 0 ? issue.count : '',
            `"${occ.selector.replace(/"/g, '""')}"`,
            `"${occ.context.replace(/"/g, '""').substring(0, 200)}..."`,
            issue.helpUrl || ''
          ];
          csv += row.join(',') + '\n';
        });
      });

      const blob = new Blob([csv], { type: 'text/csv' });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `ada-scan-${new Date().toISOString().split('T')[0]}.csv`;
      a.click();
      window.URL.revokeObjectURL(url);
    }

    function displayPDFResults(data) {
      const { totalFiles, results, summary } = data;

      const content = document.getElementById('pdfResultsContent');
      content.innerHTML = `
        <div class="page-info">
          <div class="page-info-row">
            <strong>Files Scanned:</strong>
            <span>${totalFiles}</span>
          </div>
          <div class="page-info-row">
            <strong>Total Issues:</strong>
            <span>${summary.totalIssues}</span>
          </div>
          <div class="page-info-row">
            <strong>Total Warnings:</strong>
            <span>${summary.totalWarnings}</span>
          </div>
        </div>
      `;

      results.forEach(result => {
        const totalProblems = result.issues.length + result.warnings.length;
        let status = 'success';
        if (result.issues.length > 0) status = 'error';
        else if (result.warnings.length > 0) status = 'warning';

        content.innerHTML += `
          <div class="pdf-card">
            <h3>
              üìÑ ${result.filename}
              <span class="status ${status}">
                ${totalProblems === 0 ? 'Passed' : totalProblems + ' issue(s)'}
              </span>
            </h3>
            <div style="color: #718096; font-size: 13px; margin-top: 4px;">
              Size: ${(result.size / 1024).toFixed(1)} KB
            </div>
            ${result.issues.length > 0 ? `
              <div class="pdf-issues">
                <strong style="color: #c53030; font-size: 14px;">Critical Issues:</strong>
                ${result.issues.map(issue => `
                  <div class="pdf-issue error">‚ùå ${issue}</div>
                `).join('')}
              </div>
            ` : ''}
            ${result.warnings.length > 0 ? `
              <div class="pdf-issues">
                <strong style="color: #7c2d12; font-size: 14px;">Warnings:</strong>
                ${result.warnings.map(warning => `
                  <div class="pdf-issue warning">‚ö†Ô∏è ${warning}</div>
                `).join('')}
              </div>
            ` : ''}
            ${totalProblems === 0 ? `
              <div style="margin-top: 16px; color: #22543d; font-weight: 500;">
                ‚úÖ No accessibility issues detected in basic scan
              </div>
            ` : ''}
          </div>
        `;
      });

      document.getElementById('results').classList.remove('active');
      document.getElementById('pdfResults').classList.add('active');
      document.getElementById('pdfResults').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    function showLoading(text) {
      document.getElementById('loadingText').textContent = text;
      document.getElementById('loading').classList.add('active');
      document.getElementById('scanBtn').disabled = true;
      document.getElementById('scanPdfBtn').disabled = true;
    }

    function hideLoading() {
      document.getElementById('loading').classList.remove('active');
      document.getElementById('scanBtn').disabled = false;
      document.getElementById('scanPdfBtn').disabled = false;
    }

    function hideResults() {
      document.getElementById('results').classList.remove('active');
      document.getElementById('pdfResults').classList.remove('active');
      document.getElementById('alertMessage').classList.remove('active');
    }

    function showAlert(message, type) {
      const alert = document.getElementById('alertMessage');
      alert.textContent = message;
      alert.className = `alert ${type} active`;
      setTimeout(() => alert.classList.remove('active'), 5000);
    }

    function switchTab(tabName) {
      // Deactivate all
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

      // Activate selected
      if (tabName === 'website') {
        document.querySelectorAll('.tab')[0].classList.add('active');
        document.getElementById('websiteTab').classList.add('active');
      } else if (tabName === 'ocr') {
        document.querySelectorAll('.tab')[1].classList.add('active');
        document.getElementById('ocrTab').classList.add('active');
        pollOcrJobs();
      } else if (tabName === 'crawler') {
        document.querySelectorAll('.tab')[2].classList.add('active');
        document.getElementById('crawlerTab').classList.add('active');
      }
    }

    // --- Crawler Logic ---
    let currentCrawlId = null;
    let crawlPollInterval = null;

    async function startCrawl() {
      const url = document.getElementById('crawlUrlInput').value;
      const maxPages = document.getElementById('crawlLimit').value;

      if (!url) return alert('Please enter a URL');

      document.getElementById('crawlBtn').disabled = true;
      document.getElementById('crawlBtn').innerText = 'Initializing...';
      document.getElementById('crawlStatus').style.display = 'block';

      try {
        const formData = new FormData();
        formData.append('url', url);
        formData.append('maxPages', maxPages);

        const res = await fetch('/api/crawl/start', { method: 'POST', body: formData });
        const data = await res.json();

        if (data.error) throw new Error(data.error);

        currentCrawlId = data.crawlId;
        pollCrawlStatus();

      } catch (e) {
        alert('Failed to start crawl: ' + e.message);
        document.getElementById('crawlBtn').disabled = false;
      }
    }

    function pollCrawlStatus() {
      if (crawlPollInterval) clearInterval(crawlPollInterval);

      crawlPollInterval = setInterval(async () => {
        if (!currentCrawlId) return;

        try {
          const res = await fetch(`/api/crawl/status/${currentCrawlId}`);
          const data = await res.json();

          // Update Progress
          const progress = data.progress || 0;
          document.getElementById('crawlProgressBar').style.width = `${progress}%`;
          document.getElementById('crawlFoundCount').innerText = data.crawl.total_pages;
          document.getElementById('crawlScannedCount').innerText = data.scans.length;

          // Update List (Limit to last 10 for performance)
          const list = document.getElementById('crawlResultsList');
          list.innerHTML = data.scans.slice(0, 50).map(scan => {
            const scoreColor = scan.score >= 90 ? '#48bb78' : scan.score >= 50 ? '#ecc94b' : '#f56565';
            return `
                        <div class="result-card" style="display:flex; justify-content:space-between; align-items:center; padding:12px;">
                            <div style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap; max-width:60%;">
                                <strong>${new URL(scan.url).pathname}</strong><br>
                                <span style="font-size:11px; color:#a0aec0">${scan.url}</span>
                            </div>
                            <div style="text-align:right;">
                                <span class="score-badge" style="background:${scoreColor}20; color:${scoreColor}">${scan.score}</span>
                                <div style="font-size:10px; color:#718096; margin-top:2px;">${scan.total_issues} issues</div>
                            </div>
                        </div>
                    `;
          }).join('');

          if (progress >= 100 && data.crawl.total_pages > 0) {
            clearInterval(crawlPollInterval);
            document.getElementById('crawlBtn').innerText = 'Audit Complete';

            // Show Download Report Button
            const statusDiv = document.getElementById('crawlStatus');
            let dlBtn = document.getElementById('crawlDownloadBtn');
            if (!dlBtn) {
              dlBtn = document.createElement('button');
              dlBtn.id = 'crawlDownloadBtn';
              dlBtn.className = 'action-btn'; // Re-use styling
              dlBtn.style.marginTop = '16px';
              dlBtn.style.backgroundColor = '#48bb78';
              dlBtn.innerHTML = 'üìÑ Download Gap Analysis Report';
              dlBtn.onclick = () => window.location.href = `/api/report/crawl/${currentCrawlId}`;

              // Insert after progress bar container section
              statusDiv.children[0].appendChild(dlBtn);
            }
          }

        } catch (e) { console.error('Poll failed', e); }
      }, 3000);
    }

    // --- Dashboard Logic ---
    let trendChart = null;

    async function loadDashboard() {
      try {
        const res = await fetch('/api/reports/history');
        const scans = await res.json();

        // Render History List
        const list = document.getElementById('scanHistoryList');
        list.innerHTML = scans.map(s => {
          const scoreClass = s.score > 80 ? 'score-high' : s.score > 50 ? 'score-med' : 'score-low';
          return `
                <div class="history-item">
                    <div>
                        <div style="font-weight:600; color:#333; margin-bottom:2px;">${new URL(s.url).hostname}</div>
                        <div style="color:#999; font-size:11px;">${new Date(s.timestamp).toLocaleDateString()}</div>
                    </div>
                    <div style="text-align:right">
                         <span class="score-badge ${scoreClass}">Score: ${s.score}</span>
                         <br>
                         <a href="#" onclick="downloadReport(${s.id})" style="font-size:10px; color:#3b82f6; text-decoration:none; margin-top:4px; display:inline-block;">Download PDF</a>
                    </div>
                </div>`;
        }).join('');

        // Render Chart
        const ctx = document.getElementById('trendChart').getContext('2d');

        // Process data for chart (reverse to show oldest to newest)
        const chartData = [...scans].reverse();
        const labels = chartData.map(s => new Date(s.timestamp).toLocaleDateString());
        const scores = chartData.map(s => s.score);
        const issues = chartData.map(s => s.total_issues);

        if (trendChart) trendChart.destroy();

        trendChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [{
              label: 'Compliance Score',
              data: scores,
              borderColor: '#10b981',
              backgroundColor: 'rgba(16, 185, 129, 0.1)',
              yAxisID: 'y',
              fill: true,
              tension: 0.4
            }, {
              label: 'Total Issues',
              data: issues,
              borderColor: '#ef4444',
              backgroundColor: 'rgba(239, 68, 68, 0.1)',
              yAxisID: 'y1',
              fill: true,
              tension: 0.4
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              mode: 'index',
              intersect: false,
            },
            plugins: {
              title: { display: true, text: 'Compliance Trends Over Time' }
            },
            scales: {
              y: {
                type: 'linear',
                display: true,
                position: 'left',
                min: 0,
                max: 100
              },
              y1: {
                type: 'linear',
                display: true,
                position: 'right',
                grid: { drawOnChartArea: false }
              }
            }
          }
        });

      } catch (e) {
        console.error('Failed to load dashboard', e);
      }
    }

    function downloadReport(id) {
      window.open(`/api/reports/executive/${id}`, '_blank');
    }

